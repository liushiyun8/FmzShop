<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.activity.RegisterActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y40"
                android:layout_marginTop="@dimen/y18"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/acount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="手机号码"
                    android:inputType="phone"
                    android:paddingLeft="@dimen/edit_paddingleft"
                    android:singleLine="true"
                    android:textColorHint="@color/gray"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/dele"
                    android:layout_width="@dimen/x18"
                    android:layout_height="@dimen/x18"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/x16"
                    android:src="@mipmap/login_btn_del_nor"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/y10"
                android:background="#eeeeee" />
            <LinearLayout
                android:id="@+id/layout_yanzhen"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y40"
                android:layout_marginTop="@dimen/y18"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/text_yanzhen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="验证码"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/edit_paddingleft"
                    android:singleLine="true"
                    android:textColorHint="@color/gray"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x12"
                    android:enabled="false"
                    android:background="@drawable/login_selct"
                    android:text="@string/yanzhi" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/y10"
                android:background="#eeeeee" />

            <LinearLayout
                android:id="@+id/layout_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y40"
                android:layout_marginTop="@dimen/y18"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/pwd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="密码"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/edit_paddingleft"
                    android:singleLine="true"
                    android:textColorHint="@color/gray"
                    android:textSize="18sp" />
                <ImageView
                    android:id="@+id/dele1"
                    android:layout_width="@dimen/x18"
                    android:layout_height="@dimen/x18"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/x10"
                    android:src="@mipmap/login_btn_del_nor"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/show"
                    android:layout_width="@dimen/x24"
                    android:layout_height="@dimen/x24"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/x12"
                    android:src="@mipmap/login_btn_invis_nor" />
                <ImageView
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:layout_gravity="center"
                    android:src="@mipmap/lockopen" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/y10"
                android:layout_marginTop="@dimen/y10"
                android:background="#eeeeee" />

            <Button
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x16"
                android:background="@drawable/login_selct"
                android:enabled="false"
                android:text="注册"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/agree"
                android:layout_margin="@dimen/x20"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录表示同意《凤毛寨服务协议》"
                android:textSize="16sp" />
        </LinearLayout>

</LinearLayout>